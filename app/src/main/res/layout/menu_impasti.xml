<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuImpasti">

    <ImageButton
        android:id="@+id/imageButtonpizza"
        android:contentDescription="@string/text_button_pizza"
        android:src="@drawable/immagineimpastopizza"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="DuplicateSpeakableTextCheck"
        style="@style/ImageButton_normal"/>

    <TextView
        android:id="@+id/text_button_pizza"
        android:text="@string/text_button_pizza"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonpizza"
        style="@style/textButton_normal"/>

    <ImageButton
        android:id="@+id/imageButtonFrolla"
        android:contentDescription="@string/text_button_frolla"
        android:src="@drawable/immagineimpastofrolla"
        app:layout_constraintBottom_toTopOf="@+id/text_Button_Frolla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButtonpizza"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="DuplicateSpeakableTextCheck"
        style="@style/ImageButton_normal" />

    <TextView
        android:id="@+id/text_Button_Frolla"

        android:text="@string/text_button_frolla"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/text_button_pizza"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonFrolla"
        style="@style/textButton_normal" />

</androidx.constraintlayout.widget.ConstraintLayout>